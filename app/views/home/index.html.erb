<% if current_user %>
  <div class='row'>
    <% if @posts.any? %>
    <h1>All Posts </h1>
      <% @posts.each do |post| %>
        <div class="col s12 m4">
          <div class="card hoverable blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= post.title %></span>
              <p><%= post.body %></p>
            </div>
            <div class="card-action">
              <%= link_to 'View Post', post_path(post) %>
              <%= link_to 'Buy', post.link %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <h3>No Posts, please add one!</h3>
    <% end %>
  </div>
<% else %>
  <div class="section no-pad-bot home" id="index-banner">
    <div class="row center tagline">
      <h2 class="header col s12 light">Find the best products for your smart apartment</h2>
    </div>
    <div class="row center cover-button">
      <% if current_user %>
      <% else %>
        <%= link_to "Get Started", new_user_registration_path, id: "download-button", class: "btn-large waves-effect waves-light" %>
      <% end %>
    </div>
    <br><br>
  </div>
<% end %>


<div class="pagination">
  <%= will_paginate @posts %>
</div>