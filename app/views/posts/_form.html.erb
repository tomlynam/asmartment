<%= form_for @post, :html => { :multipart => true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :link %>
  <%= f.text_field :link, placeholder: "http://" %>

  <%= f.label :body %>
  <%= f.text_area :body, class: "materialize-textarea" %>

  <%= f.submit class: "btn" %>

<% end %>

