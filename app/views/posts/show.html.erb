<h1><%= @post.title %></h1>

<h3><%= @post.link %></h3>

<p><%= @post.body %></p>

<hr>

<% if current_user.id == @post.user_id %>
  <%= link_to 'Edit Post', edit_post_path(@post) %> |
  <%= link_to 'Delete Post', post_path, method: :delete, data: {confirm: 'You sure you want to delete?'} %>
<% end %>